{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "env": {
        "node": true,
        "jest/globals": true
    },
    "plugins": ["jest"],
    "ignorePatterns": ["**/dist", "**/*.js", "**/mock"],
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "prettier"],
    "rules": {
        "default-case": "error",
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "quotes": ["error", "single"],
        "max-len": ["error", 100],
        "no-else-return": 2,
        "semi": ["error", "always"],
        "space-unary-ops": 2
    }
}
